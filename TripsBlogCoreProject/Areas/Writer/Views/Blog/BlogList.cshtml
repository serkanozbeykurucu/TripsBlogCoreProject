@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center"> Bloglarım </h2>
                <div class="table-responsive my-5">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Blog Adı.</th>
                                <th>Tarih</th>
                                <th>Kategori</th>
                                <th>Durumu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.Id</td>
                                    <td>@item.BlogName</td>
                                    <td> @(((DateTime)item.BlogDate).ToString("dd/MM/yyyy"))</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="/Blog/BlogDetails/@item.Id" class="badge badge-primary">
                                            Sitede Gör
                                        </a>
                                        <a href="/Writer/Blog/BlogUpdate/@item.Id" class="badge badge-success">
                                            Güncelle
                                        </a>
                                        <a href="/Writer/Blog/BlogDelete/@item.Id" class="badge badge-danger">
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
