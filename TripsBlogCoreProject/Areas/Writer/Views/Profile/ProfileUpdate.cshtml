@model TripsBlogCoreProject.Areas.Writer.Models.WriterEditModel
@{
    ViewData["Title"] = "ProfileUpdate";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center"> Profil Güncelleme</h1>
            <p class="card-description"> Bu alan üzerinden profilinizi güncelleyebilirsiniz. </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Adınız</label>
                    <input type="text" class="form-control" asp-for="FirstName" placeholder="Adınız">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Soyadınız</label>
                    <input type="text" class="form-control" asp-for="LastName" placeholder="Soyadınız">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>E-Mail</label>
                    <input type="email" class="form-control" asp-for="EMail" placeholder="E-Mail">
                    <span asp-validation-for="EMail" class="text-danger"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Güncelleme</button>
                <a href="/Writer/Profile/Index" class="btn btn-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

