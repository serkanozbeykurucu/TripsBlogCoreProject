@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center"> Yazar Profil Sayfası</h1>
            <p class="card-description"> Bu alan üzerinden yazar bilgilerinizi görebilirsiniz. </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input type="text" class="form-control" value="@ViewBag.FirstName" placeholder="FirstName">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Soyadınız</label>
                    <input type="text" class="form-control" value="@ViewBag.LastName" placeholder="LastName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input type="email" class="form-control" value="@ViewBag.Email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputCategory">PhoneNumber</label>
                    <input type="tel" class="form-control" value="@ViewBag.PhoneNumber" placeholder="PhoneNumber">
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <a href="/Writer/Profile/ProfileUpdate/" class="btn btn-primary mr-2">Profil Güncelle</a>
                <a href="/Writer/Dashboard/Index" class="btn btn-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
