@model TripsBlogCoreProject.Areas.Admin.Models.RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateRole</h1>

<div class="col-12 grid-margin stretch-card my-3">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center"> Rol Güncellene Alanı </h1>
            <p class="card-description"> Bu alan üzerinden rol güncelleyebilirsiniz. </p>
            <form class="forms-sample" method="post">
                
                <div class="form-group">
                    <label for="exampleInputName1">Rol Numarası </label>
                    <input type="text" class="form-control" placeholder="Rol Numarası" asp-for="Id">
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label for="exampleInputName1">Rol Başlığı </label>
                    <input type="text" class="form-control" placeholder="Rol Başlığınız" asp-for="name">
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/Admin/AdminRol/Index" class="btn btn-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>