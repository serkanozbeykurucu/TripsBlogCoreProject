@model EntityLayer.Concrete.Comment
@{
    ViewData["Title"] = "CommentDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-sm-11 grid-margin stretch-card my-3">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center"> Blog Yorum Silme</h1>
                <p class="card-description"> Bu alan üzerinden Yorum silmek istediğinize emin misiniz? </p>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label>Yorum Yapan Kullanıcı</label>
                        <input type="text" class="form-control" asp-for="CommentUser" placeholder="Yorum Yapan Kullanıcı adı" readonly>
                        <span asp-validation-for="CommentUser" class="tex-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="date" class="form-control" asp-for="CommentDate" placeholder="Tarih" readonly>
                        <span asp-validation-for="CommentDate" class="tex-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        <input type="text" class="form-control" asp-for="CommentContent" placeholder="Yorum" readonly>
                        <span asp-validation-for="CommentContent" class="tex-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Blog</label>
                        @Html.DropDownListFor(x=> x.BlogId,(List<SelectListItem>)ViewBag.Blogs,new {@class = "form-control", @readonly ="readonly" , disabled = "disabled"})
                        <span asp-validation-for="BlogId" class="tex-danger"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary mr-2">Sil</button>
                    <a href="/Admin/Comment/CommentList" class="btn btn-dark">Vazgeç</a>
                </form>
            </div>
        </div>
    </div>

</div>

