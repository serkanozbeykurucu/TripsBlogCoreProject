@model EntityLayer.Concrete.Journey
@{
    ViewData["Title"] = "JourneyDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card my-3">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center"> Gezi Silme</h1>
            <p class="card-description"> Bu alan üzerinden gezi silebilirsiniz. </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Gezi Adı</label>
                    <input type="text" class="form-control" asp-for="JourneyName" placeholder="Gezi Adı" readonly>
                    <span asp-validation-for="JourneyName" class="tex-danger"></span>
                </div>
                <div class="form-group">
                    <label>Gezi Özet</label>
                    <input type="text" class="form-control" asp-for="JourneyShortDescription" placeholder="Gezi Özet" readonly>
                    <span asp-validation-for="JourneyShortDescription" class="tex-danger"></span>
                </div>

                <div class="form-group">
                    <label>Tanıtım Resmi</label>
                    <input type="text" class="form-control" asp-for="ThumbNail" placeholder="Tanıtım Resim" readonly>
                    <span asp-validation-for="ThumbNail" class="tex-danger"></span>
                </div>
                <div class="form-group">
                    <label>Resim</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim" readonly>
                    <span asp-validation-for="ImageUrl" class="tex-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" asp-for="JourneyDescription" rows="4" readonly></textarea>
                    <span asp-validation-for="JourneyDescription" class="tex-danger"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Sil</button>
                <a href="/Admin/Journey/JourneyList" class="btn btn-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


