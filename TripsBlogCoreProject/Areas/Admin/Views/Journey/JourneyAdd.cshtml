@model TripsBlogCoreProject.Areas.Admin.Models.JourneyAddViewModel
@{
    ViewData["Title"] = "JourneyAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-sm-11 grid-margin stretch-card my-3">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center"> Gezi Ekleme</h1>
                <p class="card-description"> Bu alan üzerinden gezi ekleyebilirsiniz. </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Gezi Adı</label>
                        <input type="text" class="form-control" asp-for="JourneyName" placeholder="Gezi Adı">
                        <span asp-validation-for="JourneyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Gezi Özet</label>
                        <input type="text" class="form-control" asp-for="JourneyShortDescription" placeholder="Gezi Özet">
                        <span asp-validation-for="JourneyShortDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Tanıtım Resmi</label>
                        <input type="file" class="form-control" asp-for="ThumbNail" placeholder="ImageUrl">
                        <span asp-validation-for="ThumbNail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Resim</label>
                        <input type="file" class="form-control" asp-for="Image" placeholder="ImageUrl">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        <textarea class="form-control" asp-for="JourneyDescription" rows="4"></textarea>
                        <span asp-validation-for="JourneyDescription" class="text-danger"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <a href="/Admin/Journey/JourneyList" class="btn btn-dark">Vazgeç</a>
                </form>
            </div>
        </div>
    </div>

</div>
