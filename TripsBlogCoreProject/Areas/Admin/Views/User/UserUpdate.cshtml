@model TripsBlogCoreProject.Areas.Admin.Models.UserDeleteViewModel
@{
    ViewData["Title"] = "UserUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card my-3">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center"> Kullanıcı Güncelleme Alanı </h1>
            <p class="card-description"> Bu alan üzerinden kullanıcılarınızı düzenleyebilirsiniz. </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adı</label>
                    <input type="text" class="form-control" placeholder="Adınız" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Soyadı</label>
                    <input type="text" class="form-control" placeholder="Soyadınız" asp-for="Lastname">
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input type="email" class="form-control"  placeholder="E-Mail Adresiniz" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputCategory">Kullanıcı Adı</label>
                    <input type="text" class="form-control"  placeholder="Kullanıcı Adınız" asp-for="username">
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputCategory">Telefon</label>
                    <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Admin/User/UserList" class="btn btn-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>