@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- dashboard inner -->
<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Dashboard</h2>
                </div>
            </div>
        </div>
        <div class="row column1">
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-user yellow_color"></i>
                        </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            <p class="total_no">@ViewBag.UserCount</p>
                            <p class="head_couter">Kullanıcı</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-book blue1_color"></i>
                        </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            <p class="total_no">@ViewBag.BlogCount</p>
                            <p class="head_couter">Blog</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-comments-o red_color"></i>
                        </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            <p class="total_no">@ViewBag.CommentCount</p>
                            <p class="head_couter">Yorum</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="full counter_section margin_bottom_30">
                    <div class="couter_icon">
                        <div>
                            <i class="fa fa-sun-o green_color"></i>
                       </div>
                    </div>
                    <div class="counter_no">
                        <div>
                            <p class="total_no">@ViewBag.Degree &deg;</p>
                            <p class="head_couter">@ViewBag.City Hava Durumu</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>



        <div class="row column4 graph">
            <div class="col-md-12 margin_bottom_30">
                <div class="dash_blog">
                    <div class="dash_blog_inner">
                        <div class="dash_head">
                            <h3>
                                <span>
                                    <i class="fa fa-calendar"></i>
                                    @DateTime.Now.ToString("dd/MM/yyyy")
                                </span>
                                <span class="plus_green_bt"><a href="/Admin/Blog/BlogAdd">+</a></span>
                            </h3>
                        </div>
                        <div class="list_cont">
                            <p>Bügün Eklenen Bloglar</p>
                        </div>
                        <div class="task_list_main">
                            <ul class="task_list">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a href="/Admin/Blog/BlogUpdate/@item.Id">@item.BlogName</a><br>
                                        <strong>@(((DateTime)item.BlogDate).ToString("d"))</strong>
                                    </li>

                                }
                            </ul>
                        </div>
                        <div class="read_more">
                            <div class="center"><a class="main_bt read_bt" href="/Admin/Blog/BlogList/">Read More</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
