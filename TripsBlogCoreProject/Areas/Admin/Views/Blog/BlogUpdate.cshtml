@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card my-3">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center"> Blog Güncelleme</h1>
            <p class="card-description"> Bu alan üzerinden blog güncelleyebilirsiniz. </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Blog Adı</label>
                    <input type="text" class="form-control" asp-for="BlogName" placeholder="Blog Adı">
                    <span asp-validation-for="BlogName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Blog Özet</label>
                    <input type="text" class="form-control" asp-for="BlogShortDescription" placeholder="Blog Özet">
                    <span asp-validation-for="BlogShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <input type="date" class="form-control" asp-for="BlogDate" placeholder="Tarih">
                    <span asp-validation-for="BlogDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputCategory">Kategori</label>
                    @Html.DropDownListFor(x=> x.CategoryId, (List<SelectListItem>)ViewBag.Category, new {@class = "form-control"})
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Resim</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Tanıtım Resmi</label>
                    <input type="text" class="form-control" asp-for="ThumbNail" placeholder="Tanıtım Resmi">
                    <span asp-validation-for="ThumbNail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" asp-for="AppUserId" placeholder="UserID">
                    <span asp-validation-for="AppUserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea class="form-control" asp-for="BlogDescription" rows="4"></textarea>
                    <span asp-validation-for="BlogDescription" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" asp-for="Status">
                        Durum
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </label>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2 my-3">Güncelleme</button>
                <a href="/Admin/Blog/BlogList" class="btn btn-dark my-3">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


