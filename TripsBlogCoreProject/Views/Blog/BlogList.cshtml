@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('/trips-master/images/hero_1.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-5" data-aos="fade-up">
                    <h1 class="mb-3 text-white">Blog</h1>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta veritatis in tenetur doloremque, maiores doloribus officia iste. Dolores.

                    </p>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="post-entry-1 h-100">
                        <a href="/Blog/BlogDetails/@item.Id">
                            <img src="/@item.ImageUrl" alt="Image"
                             class="img-fluid">
                        </a>
                        <div class="post-entry-1-contents">
                            <h2>
                                <a href="/Blog/BlogDetails/@item.Id">
                                    @item.BlogName
                                </a>
                            </h2>
                            <span class="meta d-inline-block mb-3">
                                @(((DateTime)item.BlogDate).ToString("dd/MM/yyyy"))
                                <span class="mx-2">by</span>
                                <a href="#">Writer</a>
                            </span>
                            <p>@item.BlogShortDescription</p>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-12 mt-5 text-center">
            <span class="p-3">1</span>
            <a href="#" class="p-3">2</a>
            <a href="#" class="p-3">3</a>
            <a href="#" class="p-3">4</a>
        </div>
    </div>
</div>
