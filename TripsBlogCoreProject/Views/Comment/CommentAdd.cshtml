@if (User.Identity.IsAuthenticated)
{
    <div class="comment-form-wrap pt-5">
        <h3 class="mb-5">Leave a comment</h3>
        <form method="post" class="" asp-action="CommentAdd" asp-controller="Comment">
            <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" class="form-control" name="CommentUser" value="@User.Identity.Name">
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" name="BlogId" value="@ViewBag.i">
            </div>
            <div class="form-group">
                <label for="message">Message *</label>
                <textarea name="CommentContent" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Post Comment" class="btn btn-primary btn-md text-white">
            </div>
        </form>
    </div>
}else
{
    <span class="text-danger"> Yorum Yapabilmek için Lütfen <a href="/Login/SignIn/">Giriş</a> Yapınız!</span>
}
