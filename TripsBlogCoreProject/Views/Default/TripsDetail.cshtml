@model EntityLayer.Concrete.Journey
<div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" style="background-image: url('/@Model.ThumbNail')">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-5" data-aos="fade-up">

                    <h1 class="mb-3 text-white">@Model.JourneyName</h1>
                    <p> @Model.JourneyShortDescription</p>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-12">
                <div class="heading-39101 mb-5">
                    <span class="backdrop text-center">Seyahata Başla</span>
                    <span class="subtitle-39191">Seyahat</span>
                    <h3>Yolculuğunuz Burada Başlıyor</h3>
                </div>
            </div>
        </div>
        <div class="row mt-5 pt-5">
            <div class="col-md-6">
                <p class="text-justify">
                    @Model.JourneyDescription
                </p>
            </div>
            <div class="col-md-6">
                <img src="/@Model.ImageUrl" alt="Image" class="img-fluid">
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("_OurStory")